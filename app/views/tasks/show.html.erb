<h1><%= @task.title %></h1>
<%= link_to "Edit this task ", task_edit_path(@task.id) %>
<p id="task-details"><%= @task.details %></p>
<% if @task.completed %>
  <p>&#9746 This task is completed</p>
<% else %>
  <p>&#9744 This task is NOT completed</p>
<% end %>

<%= link_to "Return to tasks summary", tasks_path %>
